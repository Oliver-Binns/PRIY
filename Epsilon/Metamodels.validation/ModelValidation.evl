context Simulation{
	constraint Named{
		check: not self.name.isEmpty()
		message: "Simulation name must be set."
		fix{
			title: "Set simulation name."
			do{
				self.name = System.user.prompt("Enter a name:");
			}
		}
	}
}
context Variable{
	constraint Named{
		check: not self.name.isEmpty()
		message: "Variable must have a name."
		fix{
			title: "Name the variable."
			do{
				self.name = System.user.prompt("Enter a name.");
			}
		}
	}
}
